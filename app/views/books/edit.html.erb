<h3>Editing Book</h3>
<% if @book.errors.any? %>
<p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
  <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
  </ul>  
<% end %>
<%= form_with model: @book, local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title, value: @book.title %>

<h4>Body</h4>
<%= f.text_area :body, value: @book.body %>

<br><%= f.submit 'Update Book' %></br>
<%= link_to "Show",book_path(@book.id) %>
 |
<%= link_to "Back", "/books" %>

<% end %>